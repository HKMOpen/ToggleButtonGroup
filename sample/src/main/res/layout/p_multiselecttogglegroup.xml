            app:togglebackground="@drawable/selector_bg_radio_button" />

        <com.nex3z.togglebuttongroup.sample.button.CustomCompoundButton
            android:layout_width="@dimen/mv_extra_detail_desc"
            android:layout_height="40dp"
            android:gravity="center"
            android:paddingBottom="8dp"
            android:paddingLeft="16dp"
