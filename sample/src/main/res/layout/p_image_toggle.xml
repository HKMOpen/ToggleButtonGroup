<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/l554"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="16dp"
        android:text="Trying with the image button" />

    <com.nex3z.togglebuttongroup.MultiSelectToggleGroup
        android:id="@+id/group_image_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/l554"
        android:padding="8dp"
        app:tbgChildSpacing="auto">

        <com.nex3z.togglebuttongroup.widgets.ImageToggle
            android:layout_width="@dimen/mv_extra_detail_desc"
            android:layout_height="40dp"
            android:background="@drawable/selector_bg_radio_button"
            android:clickable="true"
            android:gravity="center"
            android:src="@drawable/ic_thumb_up_black_24dp" />

        <com.nex3z.togglebuttongroup.widgets.ImageToggle
            android:layout_width="@dimen/mv_extra_detail_desc"
            android:layout_height="40dp"
            android:background="@drawable/selector_bg_radio_button"
            android:clickable="true"
            android:gravity="center"
            android:src="@drawable/ic_thumb_up_black_24dp" />

        <com.nex3z.togglebuttongroup.widgets.ImageToggle
            android:layout_width="@dimen/mv_extra_detail_desc"
            android:layout_height="40dp"
            android:background="@drawable/ic_thumb_up_black_24dp"

            android:gravity="center"
            android:src="@drawable/selector_bg_radio_button" />

        <com.nex3z.togglebuttongroup.widgets.ImageToggle
            android:layout_width="@dimen/mv_extra_detail_desc"
            android:layout_height="40dp"
            android:background="@drawable/ic_thumb_up_black_24dp"

            android:gravity="center"
            android:src="@drawable/selector_bg_radio_button" />

        <com.nex3z.togglebuttongroup.widgets.ImageToggle
            android:layout_width="@dimen/mv_extra_detail_desc"
            android:layout_height="40dp"
            android:background="@drawable/ic_thumb_up_black_24dp"
            android:gravity="center"
            android:src="@drawable/selector_bg_radio_button" />




    </com.nex3z.togglebuttongroup.MultiSelectToggleGroup>

</RelativeLayout>