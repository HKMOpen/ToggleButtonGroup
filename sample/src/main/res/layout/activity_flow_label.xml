            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/gap_lv1a"
            android:text="FRI" />

        <com.nex3z.togglebuttongroup.widgets.LabelRoundedToggle
            android:id="@+id/lb_sat"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/gap_lv1a"
            android:text="SAT" />

    </com.nex3z.togglebuttongroup.SingleSelectToggleGroup>

