<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/gre43"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="16dp"
        android:text="MultiSelectToggleGroup with CustomToggleButton implementing ToggleButton" />

    <com.nex3z.togglebuttongroup.MultiSelectToggleGroup
        android:id="@+id/group_multi_custom_togglebutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gre43"
        android:padding="8dp"
        app:tbgChildSpacing="auto">

        <com.nex3z.togglebuttongroup.sample.button.CustomToggleButton
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/selector_bg_radio_button"
            android:gravity="center"
            android:text="lorem"
            android:textColor="@color/selector_text_radio_button" />

        <com.nex3z.togglebuttongroup.sample.button.CustomToggleButton
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/selector_bg_radio_button"
            android:gravity="center"
            android:text="ipsum"
            android:textColor="@color/selector_text_radio_button" />

        <com.nex3z.togglebuttongroup.sample.button.CustomToggleButton
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/selector_bg_radio_button"
            android:gravity="center"
            android:text="dolor"
            android:textColor="@color/selector_text_radio_button" />

    </com.nex3z.togglebuttongroup.MultiSelectToggleGroup>
</RelativeLayout>